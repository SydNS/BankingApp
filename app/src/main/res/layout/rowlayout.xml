<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="6dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="392dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:id="@+id/typeOfTransaction"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/transactionId"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@id/amountOfMoney"
            android:text="Withdraw"
            android:textColor="@color/black"
            android:textSize="17dp" />


        <TextView
            android:id="@+id/transactionId"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@id/typeOfTransaction"
            android:text="1"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/amountOfMoney"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_below="@id/transactionId"
            android:layout_marginLeft="40dp"
            android:text="4.38 USD"
            android:textColor="@color/black" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
